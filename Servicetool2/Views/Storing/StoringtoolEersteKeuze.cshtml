
@{
    ViewBag.Title = "Keuzepagina";
}
@model List<Servicetool2.Models.Product>
<div class="container">

    <div class="row">

        <div class="col-6">
            <h2>Hier komt de storingstool</h2>

        </div>

    </div>

    <br />

    <div class="row">

        <div class="col-4">
            <h3>Welke warmtepomp heeft u</h3>
            <select class="form-select" aria-label="Default select example" id="technischWarmtepompen">
                <option selected>Kies een warmtepomp</option>
                @foreach (var product in Model)
                {
                    if (product.Type == "Heattransformers")
                    {
                        <option id="@product.MerkEnType">@product.MerkEnType</option>
                    }
                }
            <option id="Techneco Elga 4,9 kW hybride warmtepomp">Techneco Elga 4,9 kW hybride warmtepomp</option>
            </select>
        </div>

        <div class="col-4">
            <h3>Welke ketel heeft u</h3>
            <select class="form-select" aria-label="Default select example" id="technischKetels">
                <option selected>Kies een ketel</option>
                @foreach (var product in Model)
                {
                    if(product.Type == "Ketel")
                    { 
                    <option id="@product.MerkEnType">@product.MerkEnType</option>
                }
            }
                </select>
                <br />
                <label>Anders:</label><br />
                <input type="text" class="form-control" />
            </div>

            <div class="col-4">
                <h3>Welke thermostaat heeft u</h3>
                <select class="form-select" aria-label="Default select example" id="technischThermostaten">
                    <option selected>Kies een thermostaat</option>
                    @foreach (var product in Model)
                    {
                        if (product.Type == "Thermostaat")
                        {
                            <option id="@product.MerkEnType">@product.MerkEnType</option>
                        }
                    }
                </select>
            </div>

        </div>

        <br />

        <div class="row">
            <div class="col-4"></div>
            <div class="col-4">
                @Html.ActionLink("Volgende", "StoringtoolProbleemKeuze", "Storing", null, new { @class = "btn btn-primary btn-block" })
            </div>
            <div class="col-4"></div>
        </div>

    </div>

    <script src="~/Scripts/technischScript.js"></script>

