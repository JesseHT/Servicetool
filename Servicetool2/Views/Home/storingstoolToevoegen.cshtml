
@{
    ViewBag.Title = "storingstoolToevoegen";
}

<h2>Vraag toevoegen</h2>

<div class="container">

    <div class="row">

        <div id="form1" class="col-lg-12">

            <div class="form-group">
                <label for="tekst">Toe te voegen:</label><br>
                <input class="form-control" type="text" id="tekst" name="tekst"><br><br />
            </div>

            <div class="form-group">

                <label for="categorie">Categorie:</label><br />
                <select class="form-select" name="categorie" id="categorie-select">
                    <option value="">Kies een categorie</option>
                    <option value="Warmtepomp">Warmtepomp</option>
                    <option value="Ketel">Ketel</option>
                    <option value="Thermostaat">Thermostaat</option>
                    <option value="Probleem">Probleem</option>
                    <option value="Bonusveld">Extra veld</option>
                </select> <br /><br />
            </div>

            <button id="vraagToevoegenKnop" onclick="vraagToevoegen()" class="btn btn-primary">Vraag toevoegen</button>

        </div>
    </div>
</div>

<script src="~/Scripts/stroringstoolToevoegenScript.js">

</script>

